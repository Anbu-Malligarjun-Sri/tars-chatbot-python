# TARS Chatbot Configuration
# Copy this file to .env and fill in your values

# LLM Provider: "openai", "gemini", "lm_studio", "ollama"
LLM_PROVIDER=lm_studio

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# LM Studio Configuration (Local)
LM_STUDIO_BASE_URL=http://localhost:1234/v1
LM_STUDIO_MODEL=meta-llama-3.2-1b-instruct-q4_0

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# TARS Personality Settings (0.0 to 1.0)
TARS_HUMOR_LEVEL=0.60
TARS_HONESTY_LEVEL=0.90
TARS_DISCRETION_LEVEL=0.95

# Voice Settings
VOICE_ENABLED=true
VOICE_RATE=150
VOICE_VOLUME=0.9

# RAG Settings
RAG_ENABLED=true
CHROMA_PERSIST_DIR=./data/vector_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
